<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>External_Contact_Id_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISBLANK( Contact__c ), ISBLANK( External_Contact_ID__c ) )</errorConditionFormula>
    <errorDisplayField>External_Contact_ID__c</errorDisplayField>
    <errorMessage>This field is required if Contact not selected</errorMessage>
</ValidationRule>
