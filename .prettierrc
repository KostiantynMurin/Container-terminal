{
	"singleQuote": true,
	"printWidth": 100,
	"proseWrap": "always",
	"tabWidth": 4,
	"requireConfig": false,
	"useTabs": true,
	"trailingComma": "none",
	"bracketSpacing": false,
	"jsxBracketSameLine": false,
	"overrides": [
		{
		  "files": "**/lwc/**/*.html",
      "options": {
        "tabWidth": 4,
        "printWidth": 100,
        "parser": "lwc"
      }
		},
		{
		  "files": "**/*.{cls,trigger,apex}",
		  "options": {
			"apexInsertFinalNewline": false,
      "tabWidth": 4,
      "printWidth": 100
		  }
		},
		{
		  "files": "*.{cmp,page,component}",
		  "options": {
			"parser": "html",
      "tabWidth": 4,
      "printWidth": 100
		  }
		}
	  ]
}
